<div class="col-lg-6">
    <!--Season Selector-->
    <h2>Select season</h2>
  <div class="table-responsive">
      <div class="season-select">
        <table class="table table-hover table-striped">
          <thead>
          <tr>
            <th>Season</th>
            <th>Teams</th>
            <th>Matches</th>
          </tr>
          </thead>
          <tbody>
            {{#each season}}
                <tr class="season-row">
                  <td>{{name}}</td>
                  <td>{{teams}}</td>
                  <td class="{{name}}-matches">{{matches}}</td>
                  <td>
                    <div class="radio">
                        <label>
                            <input class="liga" type="radio" name="season" onclick="selectSeason()" id="{{name}}" value="{{name}}" checked="">
                        </label>
                    </div>
                  </td>
                </tr>
            {{/each}}
          </tbody>
        </table>
    </div>
  </div>

    <a type="button" class="btn btn-lg btn-info" onclick="select()">Select</a>
</div>
